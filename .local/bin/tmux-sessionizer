#!/bin/bash

frequent_dirs=$(tr '\n' ' ' <~/.config/tmux/frequent_dirs.txt)
pwd >~/.config/tmux/previous-dir.txt

if [[ $# -eq 1 ]]; then
	selected=$1
else
	selected=$(eval "find $frequent_dirs -mindepth 1 -maxdepth 1 -type d" | fzf)
fi

if [[ -z $selected ]]; then
	exit 0
fi

# Prefix + , to go to previous directory
if [[ $selected == ',' ]]; then
	selected_name=$(basename <~/.config/tmux/previous-dir.txt | tr . _)
else
	selected_name=$(basename "$selected" | tr . _)
fi
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
	tmux new-session -s "$selected_name" -c "$selected"
	exit 0
fi

if ! tmux has-session -t="$selected_name" 2>/dev/null; then
	tmux new-session -ds "$selected_name" -c "$selected"
fi

tmux switch-client -t "$selected_name"
